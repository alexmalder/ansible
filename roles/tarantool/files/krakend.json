{
  "$schema": "https://www.krakend.io/schema/v2.4/krakend.json",
  "version": 3,
  "port": 8082,
  "extra_config": {
    "backend/http": {
      "return_error_details": "backend_alias"
    },
    "telemetry/logging": {
      "level": "WARNING",
      "prefix": "[KRAKEND]",
      "stdout": true
    },
    "telemetry/opencensus": {
      "sample_rate": 100,
      "reporting_period": 0,
      "exporters": {
        "jaeger": {
          "endpoint": "http://jaeger:14268/api/traces",
          "service_name": "krakend",
          "buffer_max_count": 1000
        }
      }
    },
    "github.com/devopsfaith/krakend-martian": {}
  },
  "endpoints": [
    {
      "endpoint": "/",
      "backend": [
        {
          "url_pattern": "/",
          "host": [
            "http://tarantool:8090"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/v1/accounts",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/accounts",
          "host": [
            "http://tarantool:8090"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/v1/accounts/{id}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/accounts/{id}",
          "host": [
            "http://tarantool:8090"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/v1/accounts",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/accounts",
          "host": [
            "http://tarantool:8090"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/v1/accounts/{id}",
      "method": "PUT",
      "backend": [
        {
          "url_pattern": "/accounts/{id}",
          "host": [
            "http://tarantool:8090"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/v1/accounts/{id}",
      "method": "DELETE",
      "backend": [
        {
          "url_pattern": "/accounts/{id}",
          "host": [
            "http://tarantool:8090"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/v1/keycloak",
      "method": "GET",
      "output_encoding": "no-op",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/auth/realms/master/protocol/openid-connect/certs",
          "disable_jwk_security": true
        },
        "modifier/martian": {
          "header.Modifier": {
            "scope": [
              "request",
              "response"
            ],
            "name": "X-Realm-Roles",
            "value": "my-x-realm-role"
          }
        }
      },
      "backend": [
        {
          "url_pattern": "/keycloak/{JWT.sub}",
          "host": [
            "http://tarantool:8090"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/v1/sins",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/auth/realms/master/protocol/openid-connect/certs",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "url_pattern": "/sins",
          "host": [
            "http://tarantool:8090"
          ]
        }
      ]
    }
  ]
}
