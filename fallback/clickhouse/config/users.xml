<?xml version="1.0"?>
<yandex>
    <profiles>
        <default>
            <max_memory_usage>10000000000</max_memory_usage>
            <load_balancing>random</load_balancing>
        </default>
        <readonly>
            <readonly>1</readonly>
        </readonly>
    </profiles>
    <users>
        <!--
        <default>
            <password>default</password>
            <ip>::/0</ip>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <access_management>1</access_management>
        </default>
        -->
        <{{ vars.clickhouse_user }}>
            <password>{{ vars.clickhouse_password }}</password>
            <ip>::/0</ip>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <access_management>1</access_management>
        </{{ vars.clickhouse_user }}>
        <{{ vars.clickhouse_readonly_user }}>
            <password>{{ vars.clickhouse_readonly_password }}</password>
            <ip>::/0</ip>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>readonly</profile>
            <quota>default</quota>
            <access_management>1</access_management>
        </{{ vars.clickhouse_readonly_user }}>
    </users>
    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>
                <errors>0</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>0</execution_time>
            </interval>
        </default>
    </quotas>
</yandex>
