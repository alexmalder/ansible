$TTL 86400
@   IN  SOA     ns1.{{ vars.DNS_DOMAIN }}. root.{{ vars.DNS_DOMAIN }}. (
                                       3           ;Serial
                                       3600        ;Refresh
                                       1800        ;Retry
                                       604800      ;Expire
                                       86400       ;Minimum TTL
)

;Name Server Information
@         IN      NS         ns1.{{ vars.DNS_DOMAIN }}.

;Reverse lookup for Name Server
100       IN  PTR     ns1.{{ vars.DNS_DOMAIN }}.

;PTR Record IP address to HostName
101      IN  PTR     www.{{ vars.DNS_DOMAIN }}.
